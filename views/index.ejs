    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>

  </head>
  <body onload="checkIn()"> 
  	<%- include navbar %>
	<header class="masthead text-white text-center">
    <div class="container">      
        <div class="row justify-content-center">
          <div class="col-lg-10 col-md-12 col-xs-12">
            <div class="contents">
              <br>
              <br>
              <br>
              <br>
              <br>
              <br>
              <br>
              <br>
              <br>
              <h2 class="head-title">Find the project that fits your support</h2>
              <br>
              <br>
              <h4 class="head-title">ConnectToFund is for you to find lively,</h4>
              <h4 class="head-title">imaginative tech before it hits the mainstream.</h4>

		          <br>
              <br>
              <br>
              <br>
          </div>
        </div> 
      </div>
    </div>
  </header>

  <!-- Category Section Start -->
    <section class="category section bg-gray">
        <div class="container">
          <div class="section-header">  
            <h2 class="section-title">Project Categories</h2>
            <p>Just Login / Sign Up to Browse More!!</p>
          </div>
          <div class="row">   
            <% if(categories != null) {
                for(var i = 0; i < categories.length; i++) {
                %>
                <div class="col-lg-4 col-sm-2 col-xs-12 f-category" style="padding: 1em;">
                    <div>
                      <% var name =  categories[i].picAddress %>
                      <img src= "/images/<%=name%>" height="250px" width="340px">
                    </div>
                    <h3><%= categories[i].categoryName %></h3>
                </div>
                <%
                }
            }%>
          </div>
        </div>
      </section>
      <!-- Category Section End -->
  </body>
</html>

<script>
    function checkIn(){
      if(window.location.href=="http://localhost:3000/?error=loginError") {
        alert("Invalid login email or password!");
      }
      else if(window.location.href=="http://localhost:3000/?error=signupError") {
        alert("This email has been registered! Please sign up with another email.");
      }
      else if(window.location.href=="http://localhost:3000/?error=duplicateUsername") {
        alert("This username has been registered! Please sign up with another username.");
      }
    }

</script>


